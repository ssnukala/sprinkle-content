                        <li class="user user-menu">
                            {% block userCard_nav %}
                                <a href="#" class='rs-usercard-image'{#class="dropdown-toggle"  style='padding:5px;'#}>
                                <img src="{{ current_user.avatar }}" class="user-image pull-left visible-xs-block" alt="User Image">
                                <span class="hidden-xs">{{current_user.first_name}} {{current_user.last_name}}</span>
                                {#}
                                {% if current_user.isMaster() %}
                                        <br><small class="rs-usercard-role hidden-xs">{{ translate("REGSEVAK_ROLE.MASTER.SHORT") }}</small>
                                {% elseif current_user.isRegAdmin() %}
                                        <br><small class="rs-usercard-role hidden-xs">{{ translate("REGSEVAK_ROLE.REG_ADMIN.SHORT") }}</small>
                                {% elseif current_user.isTeacher() %}
                                        <br><small class="rs-usercard-role hidden-xs">{{ translate("REGSEVAK_ROLE.TEACHER.SHORT") }}</small>
                                {% endif %}
                                #}
                                </a>
                            {% endblock %}
                        </li>
                        <li>
                            <a href="{{site.uri.public}}/account/logout" class="nav-highlight">
                            <span class="glyphicon glyphicon-log-out" title='{{translate("LOGOUT")}}' aria-hidden="true"></span>
