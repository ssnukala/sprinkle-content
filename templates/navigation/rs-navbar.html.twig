                        </li>
                        <li>
                            <a href="#" data-toggle="control-sidebar">
                                <i class="fas fa-at"></i>
                                <i class="fas fa-envelope"></i>
                            </a>
                        </li>
                    {% else %}
                        <li>
                            <a href="{{site.uri.public}}/account/sign-in" class="nav-highlight">
                                <span class="glyphicon glyphicon-log-in" title='{{translate("LOGIN")}}' aria-hidden="true"></span>
                            </a>
                        </li>
                    {% endif %}
                    </ul>
                </div>
            {% endblock %}
        </div>
