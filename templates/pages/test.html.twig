{% extends "pages/abstract/base.html.twig" %}

{% block stylesheets_page_group %}
<style>
    .cbd-value-edge {
      content: "";
      width: 10px;
      border-right: 9px solid transparent;
      border-top: 19px solid #232f3e;
      -moz-box-sizing: border-box;
      -webkit-box-sizing: border-box;
      box-sizing: border-box;
      height: 26px;
      /*position: absolute;
      border-top: 19px solid rgb(44, 148, 214);
      top: 0;
      right: -10px; */
    }
    .cbd-value-text {
      /*max-width: 130px;
      background-color: rgb(44, 148, 214);
      /* color: #232F3E; */
      padding: 2px 10px;
      color: white;
      background-color: #232f3e;
      text-align: center;
      font-size:.75em;
    }

    .cbd-blue {
        background-color: rgb(44, 148, 214) !important;
    }

    .cbd-blue-edge {
          border-top: 19px solid rgb(44, 148, 214) !important;
    }
    .image-wrapper{
        text-align:center;
    }
    .sui-product-info{
        border-bottom: 2px solid lightgray;
        padding:3px;
    }

    .product-name {
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    text-align: left;
    font-weight: bold;
    color: #4c2c92;
    }

    .slick-slide{
        background-color:#fafafa;
    }
    .sui-card {
        background-color:#fff;
    }
    .sui-output-money {
        font-size:18px;
        color:#cd2026;

    }

.a-price-symbol {
    top: -.5em;
    font-size: 12px;
}    
.a-price {
    font-size: 21px;
}
.a-price-decimal {
    position: absolute;
    opacity: 0;
}
.a-price-fraction {
    top: -.5em;
    font-size: 12px;
}
</style>
{% endblock %}

{% block body_attributes %}
    class="hold-transition skin-{{site.AdminLTE.skin}} layout-top-nav"
{% endblock %}

{% block content %}

<div class="wrapper">

  <header class="main-header">
    {% include "navigation/main-nav.html.twig" %}
  </header>

  <!-- Full Width Column -->
  <div class="content-wrapper">
    <div class="container">
        <!-- Content Header (Page header) -->
        {% block content_header %}
        <section class="content-header">
          <h1>{% block header_title %}{{ block('page_title') }}{% endblock %}</h1>
          {% if block('page_description') is not empty %}<h1>
          <small>{% block header_description %}{{ block('page_description') }}{% endblock %}</small>
          </h1>{% endif %}
          <div id="alerts-page"></div>
        </section>
        {% endblock %}
        <section class="content">
            {% block body_matter %}
<div data-index="0" class="slick-slide slick-active" tabindex="-1" style="outline: none;">
  <div class="sui-card bp3-elevation-0 product-card bundle-item-row">
    <div class="sui-product-info web" style="width: 200px;">
        <span class="glyphicon glyphicon-heart-empty pull-right" style="color: rgb(153, 0, 15);" aria-hidden="true"></span>            
        <span class="cbd-value-text cbd-blue pull-left sui-output-picklist">Indica Hybrid</span>
        <span class="cbd-value-edge cbd-blue-edge span-left-item pull-left " ></span>

      <div class="image-wrapper">
        <div class="sui-product-grid-image">
          <img src="https://opg-prd-mybpg-images.s3-us-west-2.amazonaws.com/tgs-cookies_cream-dry_web-05_25_18_1.jpg" alt="Gelato Cake" class="product-clickable" style="width: auto;height: auto;max-width: 70%;">
        </div>
      </div>
      <div class="product-card-footer">
        <div class="product-footer">
          <h4 class="product-name">Gelato Cake</h4>
          <p>
            <span class="short-desc">
                Toucan Abyss 
                <span class="product-uom-size">(3.5g)</span><br>
                <span class="short-desc">Happy, Creative, Social</span>
            </span>
        </p>
          <p class="product-thc-cbd">
            <span class="product-thc pull-left">
              THC:
              <span class="sui-output-percentage">21.00%</span>
            </span>
            <span class="product-thc pull-right">
              CBD:
              <span class="sui-output-percentage">1.53%</span>
            </span>
          </p>
          <div class="cbd-profile">
            <div class="span-right-item discounted-price">
              <div>&nbsp;</div>
            </div>
          </div>
          <div class="cbd-profile">
            <div class="span-right-item">
              <div class="sui-field sui-input-field span-right-item sui-inline">
                <span class="sui-field-label">
                  <div class="field-info"></div>
                  <div class="field-control">
                    <span class="sui-output-money pull-left">
                    $20.00</span>
                    <button type="button" name="shopping-cart" class=" btn btn-danger pull-right bp3-button sui-button cart-icon normal bp3-minimal" iconname="pping-cart">
                        <h5 class="bp3-button-text"> BUY NOW
                            <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span>
                        </h5>
                    </button>
                  </div>
                </span>
              </div>
            </div>
          </div>
          <div class="clearfix"></div>
        </div>
      </div>
    </div>
  </div>
</div>            
            
            {% endblock %}
        </section>
    </div>
  </div>
  <!-- /.content-wrapper -->

  {% block footer %}
    {% include "pages/partials/footer.html.twig" %}
  {% endblock %}
</div>
<!-- ./wrapper -->

{% endblock %}